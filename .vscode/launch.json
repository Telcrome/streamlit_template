    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            }
        },
        {
            "name": "Cli run",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/st_demo/cli.py",
            "args": ["run"],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            }
        },
        {
            "name": "Cli gui",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/st_demo/cli.py",
            "args": ["gui"],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            }
        }
    ]
}